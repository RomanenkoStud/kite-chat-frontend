<script is:inline>
	window.addEventListener('theme-change', (event) => {
		modeChange(event.detail.theme);
	})

	const modeChange = (mode) => {
        const kiteChatElements = document.querySelectorAll('kite-chat');
        for (const kiteChat of kiteChatElements) {
            if (mode === 'dark') {
                kiteChat.setAttribute('dark', '');
            } else {
                kiteChat.removeAttribute('dark');
            }
        }
	};   
</script>